@using Microsoft.AspNetCore.Http;
@model WebApp.Models.Feedback

@{
    ViewData["Title"] = "Create Feedback";
    var uid = Context.Session.GetInt32("user_id");
    var name = new InsuranceOnlineContext().Customers.FirstOrDefault(x=>x.Id==uid).Username;
}


<div class="section banner-page about">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="title-page">Account</div>
                <ol class="breadcrumb">
                    <li><a href="#">Create a feedback</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="section contact">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-md-4 col-md-push-8">
                <div class="widget download">
                    <a href="#" class="btn btn-secondary btn-block btn-sidebar"><span class="fa  fa-file-pdf-o"></span> Company Brochure</a>
                </div>

                <partial name="~/Views/Shared/_contact.cshtml" />

            </div>
            <div class="col-sm-8 col-md-8 col-md-pull-4">
                <div class="content">
                    <h3 class="section-heading-2">
                        Your feedback here
                    </h3>
                    <form asp-action="Create">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" value="@uid" name="CustomerId" />
                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="p_name" value="@name" placeholder="Full Name...">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="InsuranceId" class="control-label">Insurance</label>
                            <select asp-for="InsuranceId" class="form-control" asp-items="ViewBag.InsuranceId"></select>
                        </div>
                        <h3 class="section-heading-2">
                            What We Need to Know
                        </h3>
                        <div class="form-group">
                            <label asp-for="FeedbackContent" class="control-label"></label>
                            <textarea asp-for="FeedbackContent" rows="6" class="form-control"></textarea>
                            <span asp-validation-for="FeedbackContent" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-secondary">Send</button>
                        </div>
                    </form>
                    <div class="margin-bottom-50"></div>
                </div>
            </div>

        </div>

    </div>
</div>